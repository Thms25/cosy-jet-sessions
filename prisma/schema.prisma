model Artist {
  id         Int         @id @default(autoincrement())
  name       String
  bio        String?
  videos     YtVideo[]
}

model YtVideo {
  id          Int         @id @default(autoincrement())
  videoId     String      @unique
  title       String
  description String?
  // publishedAt DateTime?
  artist      Artist?     @relation(fields: [artistId], references: [id])
  artistId    Int?
}
